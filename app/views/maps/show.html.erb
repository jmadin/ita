<div class="row">
  <div class="col-md-10 col-md-offset-1">

		<h1><%= @map.map_name %></h1>

		<p>
		  <strong>Map code:</strong>
		  <%= @map.map_code %>
		</p>

		<p>
		  <strong>Coordinates:</strong>
		  <%= @map.latitude %>, <%= @map.longitude %>
		</p>

		<p>
		  <strong>Geotiff pixel size (metres):</strong>
		  <%= @map.pixel_size %>
		</p>

		<p>
		  <strong>Map description:</strong>
		  <%= @map.map_description %>
		</p>

		<p>
		  <strong>Map date:</strong>
		  <%= @map.map_date %>
		</p>

		<p>
		  <strong>Download full-sized as:</strong>
			<%= link_to "png", image_path("record_png/#{@map.map_code}.png") %> | <%= link_to "geotiff", image_path("record_geotiff/#{@map.map_code}.tif") %><br/>(Note that geotiffs retain lat and long information)
		</p>

		<div class="btn-group">
	    <% if signed_in? && current_user.admin? %>
				<%= link_to 'Edit', edit_map_path(@map), class: "btn btn-default" %>
			<% end %>
			<%= link_to 'Back', maps_path, class: "btn btn-default" %>
		</div>
	
    <% if signed_in? && current_user.admin? %>
			<%= link_to 'X', map_path(@map), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md btn-danger pull-right"  %>
		<% end %>
		
		<%= image_tag "record_thumb/#{@map.map_code}.png", :style => "border:0px;", class:  "img-responsive" %>

		<h2>Outlines</h2>

		<div class="row">
		  <div class="col-md-1"><h4>ID</h4></div>
		  <div class="col-md-2"><h4>Type</h4></div>
		  <div class="col-md-2"><h4>State</h4></div>
		  <div class="col-md-2"><h4>Filename</h4></div>
		  <div class="col-md-2"><h4>Notes</h4></div>
		  <div class="col-md-3"></div>
		</div>

		<%= render @map.outlines %>

		<div class="row">
			<%= form_for([@map, @map.outlines.build]) do |f| %>
			  <div class="col-md-1"></div>
			  <div class="col-md-2"><%= f.select :substrate_type, ["", "Hard coral", "Soft coral", "Filamentous algae", "Macroalgae", "Hard substrate", "Large rubble", "Small rubble", "Sand"], {}, { class: "form-control" } %></div>
			  <div class="col-md-2"><%= f.select :substrate_state, ["", "Attached", "Dislodged", "Break", "Scoured", "Damage other"], {}, { class: "form-control" } %></div>
			  <div class="col-md-2"><%= f.text_field :outline_filename, class: "form-control" %></div>

			  <%= f.hidden_field :user_id, :value => current_user.id %>

			  <div class="col-md-2"><%= f.text_area :outline_notes, class: "form-control" %></div>
			  <div class="col-md-3"><%= f.submit class: "btn btn-primary" %></div>
			<% end %>
		</div>



	</div>
</div>

